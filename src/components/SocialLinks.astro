<style define:vars={{ buttonSize, iconSize }}>
  .social-links {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .social-button {
    width: var(--buttonSize);
    height: var(--buttonSize);
    border-radius: 50%;
    border: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    transition: all 0.15s ease;
    background: transparent;
  }

  .social-button:hover {
    color: var(--text-primary);
    border-width: 2px;
  }

  .social-button svg {
    width: var(--iconSize);
    height: var(--iconSize);
  }
</style>
