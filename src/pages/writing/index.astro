---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../../utils/formatters';

// Get all writing posts, filter out drafts in production
const allPosts = await getCollection('writing', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

// Sort by date (newest first)
const sortedPosts = allPosts.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Extract all unique tags
const allTags = [...new Set(sortedPosts.flatMap(post => post.data.tags))].sort();
---

<BaseLayout title="Writing - Griffin Chure">
  <div class="container">
    <header class="page-header">
      <h1 class="mono-upper">Writing</h1>
      <p>
        Computational tutorials, scientific explorations, and technical notes.
        These posts blend code with narrative to explain concepts in quantitative biology
        and data analysis.
      </p>
    </header>

    {allTags.length > 0 && (
      <div class="tag-filter">
        <span class="filter-label mono-upper">Filter by tag:</span>
        <div class="tag-buttons">
          <button class="tag-button active mono-upper" data-tag="all">All</button>
          {allTags.map(tag => (
            <button class="tag-button mono-upper" data-tag={tag}>{tag}</button>
          ))}
        </div>
      </div>
    )}

    <div class="posts-list">
      {sortedPosts.map((post, index) => {
        const postNumber = sortedPosts.length - index;
        return (
          <article class="post-item" data-tags={JSON.stringify(post.data.tags)}>
            <a href={`/writing/${post.slug}`} class="post-link">
              <span class="post-counter mono-upper">{postNumber}</span>
              <time class="post-date mono-upper">{formatDate(post.data.date)}</time>
              <h2 class="post-title">{post.data.title}</h2>
              <p class="post-description">{post.data.description}</p>
              <div class="post-tags">
                {post.data.tags.map(tag => (
                  <span class="post-tag mono-upper">{tag}</span>
                ))}
              </div>
            </a>
          </article>
        );
      })}
    </div>

    {sortedPosts.length === 0 && (
      <p class="empty-state">No posts yet. Check back soon!</p>
    )}
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 920px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 1.25rem;
    font-weight: 400;
    margin-bottom: 0.75rem;
    line-height: 1.3;
    letter-spacing: 0.03em;
  }

  .page-header p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  /* Tag filter */
  .tag-filter {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border-color);
  }

  .filter-label {
    font-size: 0.7rem;
    color: var(--text-tertiary);
    display: block;
    margin-bottom: 0.75rem;
    letter-spacing: 0.03em;
  }

  .tag-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-button {
    padding: 0.35rem 0.75rem;
    font-size: 0.7rem;
    background: transparent;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.15s ease;
    letter-spacing: 0.03em;
  }

  .tag-button:hover {
    border-color: var(--text-tertiary);
    color: var(--text-primary);
  }

  .tag-button.active {
    background: var(--text-primary);
    border-color: var(--text-primary);
    color: var(--bg-primary);
  }

  /* Posts list */
  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-item {
    border-left: 2px solid var(--border-color);
    padding-left: 1rem;
    transition: border-color 0.15s ease;
  }

  .post-item:hover {
    border-left-color: var(--text-primary);
  }

  .post-item:hover .post-counter {
    color: var(--text-primary);
  }

  .post-item.hidden {
    display: none;
  }

  .post-link {
    display: grid;
    grid-template-columns: 1.75rem 1fr;
    gap: 0.5rem;
    text-decoration: none;
    align-items: start;
  }

  .post-counter {
    font-size: 0.75rem;
    color: var(--text-tertiary);
    letter-spacing: 0.03em;
    transition: color 0.15s ease;
  }

  .post-date {
    font-size: 0.7rem;
    color: var(--text-tertiary);
    letter-spacing: 0.03em;
    display: block;
    margin-bottom: 0.25rem;
    grid-column: 2;
  }

  .post-title {
    font-family: 'Geist Mono', monospace;
    font-size: 1rem;
    font-weight: 400;
    margin-bottom: 0.25rem;
    color: var(--text-primary);
    line-height: 1.4;
    letter-spacing: 0.01em;
    text-transform: uppercase;
    grid-column: 2;
  }

  .post-description {
    font-size: 0.85rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 0.35rem;
    grid-column: 2;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    grid-column: 2;
  }

  .post-tag {
    font-size: 0.65rem;
    color: var(--text-tertiary);
    letter-spacing: 0.03em;
  }

  .post-tag:not(:last-child)::after {
    content: 'Â·';
    margin-left: 0.5rem;
    color: var(--text-tertiary);
  }

  .empty-state {
    text-align: center;
    color: var(--text-tertiary);
    font-size: 0.9rem;
    padding: 3rem 0;
  }

  @media (max-width: 768px) {
    .container {
      padding: 2.5rem 1.5rem;
    }

    .page-header h1 {
      font-size: 1.1rem;
    }

    .tag-buttons {
      gap: 0.4rem;
    }

    .tag-button {
      padding: 0.3rem 0.6rem;
      font-size: 0.65rem;
    }

    .post-title {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  // Tag filtering functionality
  const tagButtons = document.querySelectorAll('.tag-button');
  const postItems = document.querySelectorAll('.post-item');

  tagButtons.forEach(button => {
    button.addEventListener('click', () => {
      const selectedTag = button.getAttribute('data-tag');

      // Update active state
      tagButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      // Filter posts
      postItems.forEach(item => {
        if (selectedTag === 'all') {
          item.classList.remove('hidden');
        } else {
          const postTags = JSON.parse(item.getAttribute('data-tags') || '[]');
          if (postTags.includes(selectedTag)) {
            item.classList.remove('hidden');
          } else {
            item.classList.add('hidden');
          }
        }
      });
    });
  });
</script>
