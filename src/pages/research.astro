---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { emphasizeAuthor, formatDate, formatAuthors } from '../utils/formatters';
import { getPublicationsBySlugs } from '../utils/publications';

const research = await getCollection('research');
const sortedResearch = research.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// Get all publications for reference
const allPublications = await getCollection('publications');
---

<BaseLayout title="Research - Griffin Chure">
  <div class="container">
    <header class="page-header">
      <h1 class="mono-upper">Research</h1>
      <br/>
      <p>Being alive is complicated at both existential and mechanistic levels. To soothe the former, I like to study the latter using a combination of pen-and-paper theory, computational modeling, 
        and (when possible) experimental dissection. Below I list a few broad themes of research I've spent time working in.</p>
    </header>

    <div class="projects-list">
      {sortedResearch.map(async (item) => {
        const { Content } = await item.render();
        const featuredPubs = getPublicationsBySlugs(item.data.publications, allPublications);

        return (
          <article class="project-item">
            <div class="project-header">
              <h2 class="mono-upper">{item.data.title}</h2>
            </div>

            <div class="project-main">
              {item.data.image && (
                <div class="project-image">
                  <img src={item.data.image} alt={item.data.title} />
                </div>
              )}
              <div class="project-description">
                <Content />
              </div>
            </div>

            {featuredPubs.length > 0 && (
              <div class="featured-publications">
                <h3 class="mono-upper">Related Publications</h3>
                <div class="pub-list">
                  {featuredPubs.map(pub => (
                    <div class="pub-item">
                      <a href={`/publications/${pub.slug}`} class="pub-link">
                        <time class="pub-date mono-upper">{formatDate(pub.data.date)}</time>
                        <div class="pub-title mono-upper">{pub.data.title}</div>
                        <div class="pub-authors" set:html={emphasizeAuthor(formatAuthors(pub.data.authors))} />
                        <div class="pub-meta">
                          <span class="pub-journal mono-upper">{pub.data.journal}</span>
                        </div>
                      </a>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </article>
        );
      })}
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 920px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .page-header {
    margin-bottom: 2.5rem;
  }

  h1 {
    font-size: 1.25rem;
    font-weight: 400;
    margin-bottom: 0;
    line-height: 1.3;
    letter-spacing: 0.03em;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .project-item {
    border: none;
    background: transparent;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--border-color);
  }

  .project-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .project-header {
    margin-bottom: 1.5rem;
  }

  .project-header h2 {
    font-size: 1rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: 0.03em;
  }

  .project-main {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 2rem;
    margin-bottom: 1.5rem;
    align-items: start;
  }

  .project-image {
    width: 100%;
    overflow: hidden;
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  .project-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .project-description {
    color: var(--text-secondary);
    line-height: 1.65;
    font-size: 0.9rem;
  }

  .project-description :global(p) {
    margin: 0;
    text-align: justify;
  }

  @media (max-width: 768px) {
    .project-main {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .project-image {
      max-width: 300px;
      margin: 0 auto;
    }
  }

  /* Featured Publications Section */
  .featured-publications {
    margin-top: 1.5rem;
  }

  .featured-publications h3 {
    font-size: 0.75rem;
    font-weight: 400;
    margin-bottom: 1rem;
    color: var(--text-tertiary);
    letter-spacing: 0.03em;
  }

  .pub-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .pub-item {
    border-left: 2px solid var(--border-color);
    padding-left: 1rem;
    transition: border-color 0.15s ease;
  }

  .pub-item:hover {
    border-left-color: var(--text-primary);
  }

  .pub-link {
    display: block;
    text-decoration: none;
  }

  .pub-date {
    font-size: 0.7rem;
    color: var(--text-tertiary);
    letter-spacing: 0.03em;
    display: block;
    margin-bottom: 0.5rem;
  }

  .pub-title {
    font-size: 0.85rem;
    font-weight: 400;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    line-height: 1.4;
    letter-spacing: 0.02em;
  }

  .pub-link:hover .pub-title {
    text-decoration: underline;
  }

  .pub-authors {
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
    line-height: 1.4;
  }

  .pub-authors :global(.emphasized-author) {
    font-weight: 600;
    text-decoration: underline;
    color: var(--text-primary);
  }

  .pub-meta {
    font-size: 0.7rem;
  }

  .pub-journal {
    color: var(--text-tertiary);
    letter-spacing: 0.03em;
  }

  @media (max-width: 768px) {
    .container {
      padding: 2.5rem 1.5rem;
    }

    h1 {
      font-size: 1.1rem;
    }

    .projects-list {
      gap: 2.5rem;
    }

    .project-item {
      padding-bottom: 2.5rem;
    }

  }
</style>
